<script>
  //add to wishlist

  async function addToWishList(productId) {
    try {
        const res = await axios.post("/addToWishList", { productId });

        if (res.data.status) {
            Swal.fire({
                title: 'added to wishlist',
                text: "The product has been added to your wishlist",
                icon: 'success',
                timer: 2000
            });
        } else {
            Swal.fire({
                title: 'already in wishlist',
                text: res.data.message,
                icon: 'info',
                timer: 2000
            });
        }
    } catch (error) {
        Swal.fire({
            title: 'error',
            text: 'There was an error adding the product to your wishlist',
            icon: 'error',
            timer: 2000
        });
    }
}

//add to cart


function addToCart(productId) {
    $.ajax({
        url: '/addToCart',
        method: "POST",
        data: { productId: productId },
        success: (response) => {
            if (response.status) {
                Swal.fire({
                    title: "Added to Cart",
                    text: response.message,
                    icon: "success",
                    timer: 2000
                });
            } else {
                Swal.fire({
                    title: "Error",
                    text: response.message,
                    icon: "error",
                    timer: 2000
                });
            }
        },
        error: (error) => {
            console.error("AJAX Error:", error);
            Swal.fire({
                title: "Error",
                text: "There was an error adding the product to your cart",
                icon: "error",
                timer: 2000
            });
        }
    });
  }



</script>
